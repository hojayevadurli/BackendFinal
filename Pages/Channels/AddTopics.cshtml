@model Final.Pages.Channels.AddTopicsModel
@{
}

@*<center><a asp-page="/Channels/Details">Add a Topic</a></center>*@


<div class="col-md-6 col-sm-12 mx-auto mb-5">
    <form method="post" asp-page-handler="AddTopics">
        <input type="hidden" asp-for="Channel.ChannelId" />
        <input type="hidden" asp-for="Channel.Title" />
        <div class="mb-3 row">
            <div class="col-sm-4 text-sm-end align-self-center">
                <label class="form-label" asp-for="Topics.TopicTitle"></label>
            </div>
            <div class="col">
                <input class="form-control" asp-for="Topics.TopicTitle" />
                <span class="form-text" asp-validation-for="Topics.TopicTitle"></span>
            </div>
        </div>
        <div class="mb-13 row">
            <div class="col-sm-10 text-sm-end align-self-center">
                <label class="form-label" asp-for="Topics.TopicDescription"></label>
                <textarea asp-for=Topics.TopicDescription rows="5" cols="140"></textarea>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-4 text-sm-end align-self-center">
            </div>
            <div class="col-8">
                <button type="submit" class="btn btn-outline-primary">Do the thing!</button>
            </div>
        </div>
    </form>
</div>

